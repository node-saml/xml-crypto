{
  "env": {
    "browser": false,
    "node": true,
    "mocha": true,
    "es2020": true
  },
  "root": true,
  "extends": ["eslint:recommended", "prettier"],
  "rules": {
    "no-console": "error",
    "no-unused-vars": "warn",
    "no-prototype-builtins": "error",
    "one-var": ["error", "never"],
    "no-duplicate-imports": "error",
    "no-use-before-define": "error",
    "curly": "error",
    "eqeqeq": ["error", "smart"],
    "no-var": "error",
    "prefer-const": "error"
  }
}
