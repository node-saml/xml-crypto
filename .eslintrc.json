{
  "env": {
    "node": true,
    "mocha": true,
    "es6": false
  },
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "extends": ["eslint:recommended", "prettier"],
  "rules": {
    "no-console": "error",
    "no-unused-vars": "warn",
    "no-prototype-builtins": "warn",
    "one-var": ["error", "never"],
    "no-duplicate-imports": "error",
    "no-use-before-define": "error",
    "curly": "error",
    "eqeqeq": ["warn", "smart"],
    "no-var": "error",
    "prefer-const": "error"
  }
}
